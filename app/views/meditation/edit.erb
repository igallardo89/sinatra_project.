  <h1>Edit Your Meditation</h1>

  <form method="POST" action="/meditations/<%= @meditation.id %>/edit">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <textarea type="datetime" name="date"><%= @meditation.date %></textarea><br>
  <textarea type="integer" name="meditation_length" ><%= @meditation.meditation_length %></textarea><br>
  <textarea type="text" name="time_of_day"><%= @meditation.time_of_day %></textarea><br>
  <input type="submit" value="submit">
  </form>


<a button id="mainbtn" type="button" class="btn btn-default" href="/">Main Page</a>
<a button id="meditationbtn" type="button" class="btn btn-default" href="/meditations">Your Log</a>
<a button id="logoutbtn" type="button" class="btn btn-default" href="/logout">Log Out</a>